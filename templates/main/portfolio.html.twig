{% extends 'base.html.twig' %}

{% block body %}

<nav class="cd-side-navigation">
		<ul>
			<li>
				<a href="#0" class="menu-item" data-menu="index">
					Главная
				</a>
			</li>

			<li>
				<a href="#0" class="menu-item selected" data-menu="portfolio"> 
					Кейсы 
				</a>
			</li>

			<li>
				<a href="#0" class="menu-item" data-menu="contacts">
					Контакты
				</a>
			</li>
		</ul>
	</nav> <!-- .cd-side-navigation -->
	<main class="cd-main">
		<section class="cd-section portfolio visible">
			<div class="cd-content" id="portfolio-content">
				{% for project in projects %}
			        <a href="#" id="load_project" class="prt-6" data-id="{{project.id}}">
			        	<div 
			        	style="{{
			        		"background:url('../img/#{project.imageUrl}') no-repeat; 
			        		background-size: 110%;

			        		" 
			        	}}">
			        	</div>
			        	<div class="hover-overlay" style="color:{{project.maincolor}}">
			        		<span>{{project.name}}</span>
			        		<h3>{{project.title}}</h3>
			        	</div>
			    	</a>
			    	
			    {% endfor %}
			</div> <!-- .cd-content -->
			<div id="project-detail">
	            <div class="project-detail-content">
	                <div id="project-close">
	                	<div id="close-project-touch"></div>
	                </div>
	                <span id="project-name"></span>
	                <h3 id="project-title"></h3>
	                <p id="project-description"></p>
	                <div id="project-text"></div>
	            </div>
	        </div>
		</section> <!-- .cd-section -->
		
	</main> <!-- .cd-main -->

	<div id="cd-loading-bar" data-scale="1" class="services"></div> <!-- lateral loading bar -->


				

{% endblock %}
